{
  "name": "reglugerdir-api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "author": "Hugsmiðajn ehf. (www.hugsmidjan.is)",
  "scripts": {
    "build": "NODE_ENV=production gulp build",
    "dev-watch": "yarn && gulp watch",
    "dev-api-server": "yarn && gulp build && nodemon -r dotenv/config dist/server.js --ignore 'backup-json/*'",
    "dev-proxy-server": "yarn && gulp build && nodemon -r dotenv/config dist/proxyServer.js --ignore 'backup-json/*'",
    "dev-proxy": "concurrently -k \"yarn dev-watch\" \"yarn dev-proxy-server\"",
    "dev-api": "concurrently -k \"yarn dev-watch\" \"yarn dev-api-server\"",
    "dev": "concurrently -k \"yarn dev-watch\" \"yarn dev-api-server\" \"yarn dev-proxy-server\"",
    "start-api": "NODE_ENV=production node -r dotenv/config dist/server.js",
    "start-proxy": "NODE_ENV=production node -r dotenv/config dist/proxyServer.js",
    "//start": "# Þetta er gert í flýti, mætti gera betur svo hægt sé að keyra tvö heroku apps frá sama codebase",
    "start": "eval $START_COMMAND",
    "lint:eslint": "eslint \"*.{js,ts,tsx}\" \"src/**/*.{js,ts,tsx}\"",
    "lint": "concurrently yarn:lint:*",
    "script": "node -r dotenv/config",
    "format:eslint": "eslint --fix  \"*.{js,ts,tsx}\" \"src/**/*.{js,ts,tsx}\"",
    "format:prettier": "prettier --write \"*.{json,md}\" \"src/**/*.{json,md,html}\"",
    "format": "concurrently yarn:format:*"
  },
  "engines": {
    "node": "^14.16",
    "yarn": "^1"
  },
  "dependencies": {
    "@hugsmidjan/gulp-copy": "^1.0.1",
    "@hugsmidjan/gulp-rollup": "^0.8.1",
    "@hugsmidjan/qj": "^4.6.1",
    "@hugsmidjan/regulations-editor": "0.4.7",
    "@types/express": "^4.17.13",
    "@types/jsdom": "^16.2.9",
    "@types/multer-s3-transform": "npm:@types/multer-s3@^2.7.10",
    "@types/node-fetch": "^2.5.10",
    "@types/sharp": "^0.29.2",
    "aws-sdk": "^2.1018.0",
    "date-fns": "^2.25.0",
    "del": "^6.0.0",
    "dotenv": "^8.2.0",
    "elastic-builder": "^2.13.0",
    "fastify": "^3.11.0",
    "fastify-basic-auth": "^1.0.1",
    "fastify-compress": "^3.4.2",
    "fastify-elasticsearch": "^2.0.0",
    "fastify-http-proxy": "^6.2.1",
    "fastify-multer": "^2.0.2",
    "fastify-multipart": "^5.1.0",
    "fastify-rate-limit": "^5.0.1",
    "gulp": "^4.0.2",
    "htmldiff-js": "^1.0.5",
    "jsdom": "^16.5.2",
    "multer-s3-transform": "^2.10.3",
    "mysql2": "^2.2.5",
    "node-fetch": "^2.6.1",
    "pagedjs-cli": "^0.1.6",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.6.2",
    "sequelize-typescript": "^2.1.0",
    "sharp": "^0.29.2",
    "typescript": "^4.2.3",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@hugsmidjan/hxmstyle": "^5.1.1",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-deprecation": "^1.2.1",
    "eslint-plugin-destructure-depth": "^1.0.1",
    "eslint-plugin-destructuring": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-type": "^16.5.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.4.1"
  },
  "hxmstyle": {
    "options": {
      "react": true,
      "typescript": true
    },
    "dependenciesAdded": [
      "@typescript-eslint/eslint-plugin",
      "@typescript-eslint/parser",
      "eslint",
      "eslint-config-prettier",
      "eslint-plugin-deprecation",
      "eslint-plugin-destructure-depth",
      "eslint-plugin-destructuring",
      "eslint-plugin-prettier",
      "eslint-plugin-react",
      "eslint-plugin-react-hooks",
      "prettier"
    ]
  }
}
